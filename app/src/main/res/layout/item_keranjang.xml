<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:padding="16dp"
    android:backgroundTint="@android:color/white">

    <!-- Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="15dp">

        <!-- Profile Image and User Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:paddingBottom="8dp">

            <!-- Profile Image -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="Profile Image"
                android:src="@drawable/ic_profile_placeholder" />

            <!-- User Information -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Pengguna"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/user_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:textSize="14sp"
                    android:textColor="#8e8e8e"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:id="@+id/divider_1" />

        <!-- Order Number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/nomor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Nomor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/nomor_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_orderan"
                android:textSize="14sp"
                android:layout_marginStart="5dp" />
        </LinearLayout>

        <!-- Order Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_order"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/status_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statusorder"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                android:textColor="#FFA500" />
        </LinearLayout>

        <!-- Date and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginTop="8dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Tanggal"
                android:textSize="14sp"
                android:textColor="#000000" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tanggal_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tanggal_order"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginStart="5dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/waktu_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/waktu_order"
                android:textSize="14sp"
                android:layout_marginStart="15dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/waktu"
                android:textSize="14sp"
                android:layout_marginStart="3dp" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
